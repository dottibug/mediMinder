<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSpecificDaysDialog"
    style="@style/dialog_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="500dp"
    tools:context=".fragments.DaySelectionDialogFragment">

    <!-- TITLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleIntervalDialog"
                style="@style/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/title_dialog_interval"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewIntervalInstructions"
                style="@style/dialog_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/info_dialog_interval"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutIntervalDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/take_every">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputIntervalDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/layoutIntervalDialogButtons"
                style="@style/dialog_button_wrapper"
                android:layout_width="match_parent"
                android:gravity="end">

                <TextView
                    android:id="@+id/buttonCancelDaysIntervalDialog"
                    style="@style/dialog_button_cancel" />

                <TextView
                    android:id="@+id/buttonSetDaysIntervalDialog"
                    style="@style/dialog_button_set" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- INSTRUCTIONS -->


    <!-- NUMBER OF DAYS -->

    <!-- Buttons -->

</androidx.constraintlayout.widget.ConstraintLayout>