<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <Button
        android:id="@+id/buttonDeleteDailyTimeReminder"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/cadetGray"
        android:contentDescription="@string/delete_reminder"
        android:gravity="center_horizontal|center_vertical"
        app:icon="@drawable/close"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="12dp"
        app:iconTint="@color/white" />

    <Button
        android:id="@+id/buttonDailyReminderTimePicker"
        style="@style/med_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/select_time" />

</LinearLayout>