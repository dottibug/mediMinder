<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.AddMedicationActivity">

    <!-- Content -->
    <ScrollView
        android:id="@+id/scrollAddMed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/activity_scroll">

        <!-- Medication Form -->
        <LinearLayout
            android:id="@+id/layoutAddMed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            style="@style/activity_vertical_layout">

            <TextView
                android:id="@+id/headlineAddMed"
                android:text="@string/add_new_medication"
                style="@style/activity_title" />

            <!-- Loading Spinner -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/loadingSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="72dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorSize="72dp"
                tools:visibility="visible" />

            <!-- Medication Info -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedInfo"
                android:name="com.example.mediminder.fragments.AddMedicationInfoFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_medication_info" />

            <!-- Medication Dosage -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedDosage"
                android:name="com.example.mediminder.fragments.AddMedicationDosageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_dosage" />

            <!-- Medication Schedule -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedSchedule"
                android:name="com.example.mediminder.fragments.AddMedicationScheduleFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_schedule" />

            <!-- Medication Reminder -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedReminder"
                android:name="com.example.mediminder.fragments.AddMedicationReminderFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_reminder" />

            <!-- Buttons -->
            <Button
                android:id="@+id/buttonAddMed"
                style="@style/button_primary"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:text="@string/add_medication" />

            <Button
                android:id="@+id/buttonCancelAddMed"
                style="@style/button_primary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/cadetGray"
                android:text="@string/cancel" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>