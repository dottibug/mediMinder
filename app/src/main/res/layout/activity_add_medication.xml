<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".activities.AddMedicationActivity">

    <!-- Content -->
    <ScrollView
        android:id="@+id/scrollAddMed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Medication Form -->
        <LinearLayout
            android:id="@+id/layoutAddMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/headlineAddMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_new_medication_title"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadlineLarge" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedInfo"
                android:name="com.example.mediminder.fragments.AddMedicationInfoFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_medication_info" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedDosage"
                android:name="com.example.mediminder.fragments.AddMedicationDosageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_dosage" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedReminder"
                android:name="com.example.mediminder.fragments.AddMedicationReminderFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_reminder" />

            <!-- Button -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAddMedSchedule"
                android:name="com.example.mediminder.fragments.AddMedicationScheduleFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_base_schedule" />

            <Button
                android:id="@+id/buttonAddMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/button_add_medication" />

            <Button
                android:id="@+id/buttonCancelAddMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cancel" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>