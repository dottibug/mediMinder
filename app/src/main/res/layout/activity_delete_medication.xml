<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Screen Content -->
    <LinearLayout
        android:id="@+id/confirmDeleteMedContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteMedicationTitle">

        <TextView
            android:id="@+id/deleteMedicationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_medication_instructions" />

        <Button
            android:id="@+id/buttonConfirmDeleteMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_confirm_delete_med" />

        <Button
            android:id="@+id/buttonCancelDeleteMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/successDeleteMedContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteMedicationTitle">

        <TextView
            android:id="@+id/successDeleteMedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_medication_success" />

        <Button
            android:id="@+id/buttonGoToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_go_to_main" />

        <Button
            android:id="@+id/buttonGoToMedications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_go_to_medications" />
    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loadingSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorSize="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deleteMedicationTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>