<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- Medication Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_medication_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputMedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/jet"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Doctor -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/hint_doctor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/jet"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Notes -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/hint_notes">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputMedNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/jet"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Medication Icon -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_icon">

        <AutoCompleteTextView
            android:id="@+id/medicationIconDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/jet"
            android:textSize="18sp"
            app:simpleItems="@array/medication_icon_array" />
    </com.google.android.material.textfield.TextInputLayout>

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal">-->

    <!-- As-Needed Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/asNeededSwitch"
        style="@style/text_style"
        android:text="@string/as_needed_switch"
        android:textOn="Scheduled medication"
        android:textOff="As-needed medication"
        app:trackTint="@color/cadetGrayLt"
        app:thumbTint="@color/cadetGray"/>

    <!-- As-Needed Switch Message -->
    <TextView
        android:id="@+id/asNeededMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/as_needed_message"
        style="@style/dialog_instructions"
        android:textColor="@color/cadetGray"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="gone"
        tools:visibility="visible"/>
<!--    </LinearLayout>-->

</LinearLayout>